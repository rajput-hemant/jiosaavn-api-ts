{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "lib": ["esnext"],
    /* Bundler mode */
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "types": ["bun-types", "@cloudflare/workers-types"],
    /* Linting */
    "strict": true,
    // "verbatimModuleSyntax": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    /* path aliases */
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src", "test"],
  "exclude": ["node_modules"]
}
